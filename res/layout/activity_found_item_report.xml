<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Found Item"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add 4 Images of the Item"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Image Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginBottom="32dp">

            <!-- Image 1 -->
            <FrameLayout
                android:id="@+id/imageUpload1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/image_placeholder_background">

                <ImageView
                    android:id="@+id/image1Preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Upload"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textAlignment="center" />

                </LinearLayout>

            </FrameLayout>

            <!-- Image 2 -->
            <FrameLayout
                android:id="@+id/imageUpload2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/image_placeholder_background">

                <ImageView
                    android:id="@+id/image2Preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Upload"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textAlignment="center" />

                </LinearLayout>

            </FrameLayout>

            <!-- Image 3 -->
            <FrameLayout
                android:id="@+id/imageUpload3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/image_placeholder_background">

                <ImageView
                    android:id="@+id/image3Preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Upload"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textAlignment="center" />

                </LinearLayout>

            </FrameLayout>

            <!-- Image 4 -->
            <FrameLayout
                android:id="@+id/imageUpload4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="@drawable/image_placeholder_background">

                <ImageView
                    android:id="@+id/image4Preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Upload"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:textAlignment="center" />

                </LinearLayout>

            </FrameLayout>

        </GridLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Back"
                android:textColor="#666666"
                android:backgroundTint="#F5F5F5"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/continueButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Continue"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
